<div class="container mt-5">
  <h2 class="mb-4 text-center">User Feedback</h2>

  <% if (feedbacks.length === 0 || feedbacks===undefined) { %>
    <p class="text-center text-muted">No feedback submitted yet.</p>
  <% } else { %>
    <% feedbacks.forEach(function(feedback, index) { %>
      <div class="card mb-3 shadow-sm">
        <div class="card-header bg-primary text-white">
          Feedback #<%= index + 1 %> - <%= feedback.name %>
        </div>
        <div class="card-body">
          <p><strong>Email:</strong> <%= feedback.email %></p>
          <p><strong>Message:</strong> <%= feedback.message %></p>
          <p class="text-muted"><small>Submitted on <%= feedback.date %></small></p>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>
