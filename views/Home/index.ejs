<header>
    <h1 class="title">Tourist Places in Chitrakoot</h1>
</header>

<main class="mx-lg-5 px-lg-5" id="places-list" style="display: flex; flex-wrap: wrap;">
    <!-- <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4" >

    </div> -->
</main>
<div class="row mr-0 justify-content-center py-5 bg-light rounded shadow">
    <div class="col-lg-5 mb-4 text-white d-flex flex-column justify-content-center align-items-start rounded"
         style="background: linear-gradient(135deg, #667eea, #764ba2);">
        <h3 class="fw-bold mb-3">Leave your experience</h3>
        <p class="mb-4">We'd love to hear your thoughts, suggestions, or feedback.</p>
    </div>
    <div class="col-lg-5">
        <div class="feedback-section p-4 bg-white rounded shadow-sm">
            <h2 class="mb-4 text-success">Feedback</h2>
            <% if (locals.msg) { %>
                <p id="feedback-status" class="text-center text-info mt-3"><%= msg %></p>
                <script>
                    alert("<%= msg %>");
                </script>
            <% } %>
            <form id="feedback-form" action="/" method="post">
                <div class="mb-3">
                    <input type="text" name="name" id="name" class="form-control" placeholder="Your Name" required>
                </div>
                <div class="mb-3">
                    <input type="email" name="email" id="email" class="form-control" placeholder="Your Email" required>
                </div>
                <div class="mb-3">
                    <textarea id="message" name="message" class="form-control" rows="5" style="resize: none;"
                        placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-success w-100">Send Feedback</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2 id="modal-title"></h2>
        <div class="modal-gallery" id="modal-gallery"></div>
        <iframe id="modal-map" allowfullscreen loading="lazy"></iframe>
    </div>
</div>


